<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_recycler_listsong"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imageSongNotifi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cunganh" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewSongNameNotifi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:gravity="bottom|start"
                android:text="Cùng anh"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_song_name"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textViewAuthorNotifi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55"
                    android:gravity="center|start"
                    android:text="Huy, Tùng Viu" />

                <ImageButton
                    android:id="@+id/imageButtonPreNotifi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_play_pre" />
                <ImageButton
                    android:id="@+id/imageButtonPlayNotifi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_play_song" />
                <ImageButton
                    android:id="@+id/imageButtonNextNotifi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_play_next" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
